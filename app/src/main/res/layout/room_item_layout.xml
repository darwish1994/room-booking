<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/di_8"
        app:cardCornerRadius="@dimen/di_8"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/di_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="AV"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/availble_bg"
                android:id="@+id/availablity"
                />

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/room_title"
                app:layout_constraintStart_toEndOf="@+id/availablity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/slider"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                />

        <androidx.viewpager.widget.ViewPager
                android:layout_width="120dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="h,3:4"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/slider"
                />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/slider"
                app:layout_constraintStart_toStartOf="@+id/slider"
                app:layout_constraintEnd_toEndOf="@+id/slider"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/dot_containerr"
                android:gravity="center"
                >
        </LinearLayout>

        <TextView
                android:text="equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                />

        <TextView
                android:text="capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                />

        <TextView
                android:text="Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                android:layout_marginBottom="8dp"
                />

        <TextView
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/availablity"
                app:layout_constraintVertical_bias="1.0"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/equipment_value"
                app:layout_constraintEnd_toStartOf="@+id/slider"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/capacity_value"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/equipment_value"
                app:layout_constraintStart_toStartOf="@+id/equipment_value"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/size_value"
                app:layout_constraintEnd_toEndOf="@+id/capacity_value"
                app:layout_constraintStart_toStartOf="@+id/capacity_value"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/location_value"
                app:layout_constraintEnd_toEndOf="@+id/size_value"
                app:layout_constraintStart_toStartOf="@+id/size_value"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                android:textColor="@color/colorPrimary"
                android:lines="1"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>