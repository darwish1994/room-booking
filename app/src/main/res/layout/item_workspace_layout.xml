<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_margin="@dimen/di_8"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/di_8"
        android:id="@+id/work_space_item"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ImageView
                android:id="@+id/work_space_char"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAllCaps="true"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio=""
                app:layout_constraintBottom_toTopOf="@+id/work_space_title"
                android:layout_marginBottom="4dp"
                />

        <TextView
                android:id="@+id/work_space_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/di_8"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:lines="1"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>