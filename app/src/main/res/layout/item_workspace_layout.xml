<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_margin="@dimen/di_8"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/di_8"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
                android:id="@+id/work_space_char"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:background="@drawable/circle_bg_pr_cl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintBottom_toTopOf="@+id/work_space_title"
                />

        <TextView
                android:id="@+id/work_space_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/di_8"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>